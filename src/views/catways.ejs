<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Liste des Catways - Port Russell</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <h1>Gestion des Catways</h1>
        <nav><a href="/dashboard">Retour au Dashboard</a></nav>
    </header>

    <main>
        <table>
            <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Type</th>
                    <th>État</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% catways.forEach(catway => { %>
                <tr>
                    <td><%= catway.catwayNumber %></td>
                    <td><strong><%= catway.type %></strong></td> 
                    <td><%= catway.catwayState %></td>
                    <td>
                        <a href="/catways/<%= catway.catwayNumber %>">Détails</a> |
                        <a href="/catways/<%= catway.catwayNumber %>/reservations">Réservations</a> |
                        <form action="/catways/delete/<%= catway._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce catway ?');">
                            <button type="submit" style="color: red; border: none; background: none; cursor: pointer; text-decoration: underline;">Supprimer</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>

        <hr>

        <section>
            <h2>Ajouter un nouveau Catway</h2>
            <form action="/catways" method="POST">
                <div>
                    <label>Numéro du catway :</label>
                    <input type="number" name="catwayNumber" required>
                </div>
                <div>
                    <label>Type :</label>
                    <select name="type" required>
                        <option value="Long">Long</option>
                        <option value="Short">Short</option>
                    </select>
                </div>
                <div>
                    <label>État :</label>
                    <input type="text" name="catwayState" placeholder="ex: Bon état" required>
                </div>
                <button type="submit" style="background-color: #3498db; color: white; padding: 10px; border: none; cursor: pointer; margin-top: 10px;">
                    Enregistrer le catway
                </button>
            </form>
        </section>
    </main>
</body>
</html>