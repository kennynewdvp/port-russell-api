<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Gestion des Utilisateurs - Port Russell</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <h1>Gestion des Utilisateurs</h1>
        <nav><a href="/dashboard" class="btn">Retour au Dashboard</a></nav>
    </header>

    <main>
        <section class="add-user-section">
            <h2>Ajouter un employ√©</h2>
            <form action="/users" method="POST" class="form-container">
                <input type="text" name="name" placeholder="Nom" required>
                <input type="text" name="firstname" placeholder="Pr√©nom" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Mot de passe (min 6 chars)" minlength="6" required>
                <button type="submit" class="btn-save">Cr√©er l'utilisateur</button>
            </form>
        </section>

        <hr>

        <h2>Liste des membres du personnel</h2>
        <table class="user-table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.firstname %></td>
                        <td><%= user.email %></td>
                        <td>
                            <a href="/users/delete/<%= user._id %>" 
                               class="btn-delete" 
                               onclick="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?')">
                               üóëÔ∏è Supprimer
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
</body>
</html>